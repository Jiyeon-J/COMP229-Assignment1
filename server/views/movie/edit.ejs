

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
           
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Movie Title</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter the Movie Title"
                    name="title" 
                    value="<%= data.title %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the movie"
                    name="description" 
                    required>
                    <%= data.description %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="genreTextField">Genre</label>
                    <input type="text" class="form-control"
                    id="genreTextField"
                    placeholder="Enter the Book's Genre"
                    name="genre" 
                    value="<%= data.genre %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control"
                    id="yearTextField"
                    placeholder="Enter the Year of release"
                    name="year" 
                    value="<%= data.year %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="ratingTextField">Rating</label>
                    <input type="text" class="form-control"
                    id="ratingTextField"
                    placeholder="Enter the Movie's Rating"
                    name="rating" 
                    value="<%= data.rating %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>
    </div>
</div>

